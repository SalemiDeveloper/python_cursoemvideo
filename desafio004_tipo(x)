x = input('Digite algo:')
print(x, 'É do tipo primeiro', type(x))
print(x, 'Possui apenas números?', x.isnumeric())
print(x, 'Possui apenas letras?', x.isalpha())
print(x, 'Possui apenas letras ou números?', x.isalnum())
print(x, 'Possui número de 0 a 9?', x.isdecimal())
print(x, 'Possui todas as letras em minúsculo?', x.islower())
print(x, 'Possui apenas espaços em branco?', x.isspace())
print(x, 'Possui apenas letras maiúsculas?', x.isupper())
print(x, 'Possui a primeira letra maiúscula e o restante minúscula?', x.istitle())
